# إعدادات البوت الأساسية
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# إعدادات قاعدة البيانات
DATABASE_URL=sqlite:///bot_database.db

# إعدادات الويب هوك (اختيارية)
USE_WEBHOOK=False
WEBHOOK_URL=https://yourdomain.com/webhook
WEBHOOK_SECRET=your_webhook_secret

# المطورين والمشرفين (معرفات مفصولة بفاصلة)
DEVELOPERS=123456789,987654321
ADMINS=111111111,222222222

# إعدادات Premium
PREMIUM_TRIAL_HOURS=48

# قناة الإشعارات (اختيارية)
NOTIFICATION_CHANNEL=-1001234567890

# إعدادات الحماية من السبام
SPAM_PROTECTION=True
MAX_MESSAGES_PER_MINUTE=20

# إعدادات النسخ الاحتياطي
BACKUP_ENABLED=True
BACKUP_INTERVAL_HOURS=24

# إعدادات التطوير
DEBUG=False
LOG_LEVEL=INFO

# إعدادات الخادم
PORT=8443
HOST=0.0.0.0

# إعدادات Telethon (للـ Userbot)
API_ID=your_api_id
API_HASH=your_api_hash

# إعدادات إضافية
TIMEZONE=UTC
LANGUAGE=ar
