# =============================================================================
# إعدادات البوت الأساسية - Bot Basic Settings
# =============================================================================

# توكن البوت من BotFather (مطلوب)
# Bot token from BotFather (required)
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# اسم البوت (اختياري)
# Bot name (optional)
BOT_NAME=ForwardBot

# معرف المطور الرئيسي (مطلوب)
# Main developer user ID (required)
DEVELOPER_ID=123456789

# =============================================================================
# إعدادات قاعدة البيانات - Database Settings
# =============================================================================

# نوع قاعدة البيانات (sqlite/postgresql/mysql)
# Database type (sqlite/postgresql/mysql)
DATABASE_TYPE=sqlite

# مسار قاعدة البيانات SQLite
# SQLite database path
DATABASE_PATH=data/bot.db

# إعدادات قاعدة البيانات PostgreSQL/MySQL (إذا كانت مستخدمة)
# PostgreSQL/MySQL database settings (if used)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=telegram_bot
DATABASE_USER=bot_user
DATABASE_PASSWORD=your_secure_password

# رابط قاعدة البيانات الكامل (بديل للإعدادات المنفصلة)
# Full database URL (alternative to separate settings)
# DATABASE_URL=postgresql://user:password@localhost:5432/telegram_bot

# =============================================================================
# إعدادات الأمان - Security Settings
# =============================================================================

# مفتاح التشفير للبيانات الحساسة (32 حرف)
# Encryption key for sensitive data (32 characters)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# كلمة مرور لوحة الإدارة
# Admin panel password
ADMIN_PASSWORD=your_secure_admin_password

# مفتاح JWT للمصادقة
# JWT secret key for authentication
JWT_SECRET=your_jwt_secret_key_here

# =============================================================================
# إعدادات Webhook (اختياري) - Webhook Settings (optional)
# =============================================================================

# تفعيل وضع Webhook
# Enable webhook mode
USE_WEBHOOK=false

# رابط الخادم للـ Webhook
# Server URL for webhook
WEBHOOK_URL=https://yourdomain.com/webhook

# منفذ الخادم المحلي
# Local server port
WEBHOOK_PORT=8443

# مسار شهادة SSL (إذا كانت مطلوبة)
# SSL certificate path (if required)
SSL_CERT_PATH=

# مسار المفتاح الخاص لـ SSL
# SSL private key path
SSL_KEY_PATH=

# =============================================================================
# إعدادات Redis (للتخزين المؤقت) - Redis Settings (for caching)
# =============================================================================

# تفعيل Redis
# Enable Redis
USE_REDIS=false

# عنوان خادم Redis
# Redis server host
REDIS_HOST=localhost

# منفذ Redis
# Redis port
REDIS_PORT=6379

# كلمة مرور Redis (إذا كانت مطلوبة)
# Redis password (if required)
REDIS_PASSWORD=

# قاعدة بيانات Redis
# Redis database number
REDIS_DB=0

# =============================================================================
# إعدادات السجلات - Logging Settings
# =============================================================================

# مستوى السجلات (DEBUG/INFO/WARNING/ERROR/CRITICAL)
# Log level (DEBUG/INFO/WARNING/ERROR/CRITICAL)
LOG_LEVEL=INFO

# حفظ السجلات في ملف
# Save logs to file
LOG_TO_FILE=true

# مسار ملف السجلات
# Log file path
LOG_FILE_PATH=logs/bot.log

# الحد الأقصى لحجم ملف السجل (بالميجابايت)
# Maximum log file size (in MB)
LOG_MAX_SIZE=10

# عدد ملفات السجل المحفوظة
# Number of backup log files
LOG_BACKUP_COUNT=5

# =============================================================================
# إعدادات الأداء - Performance Settings
# =============================================================================

# عدد العمليات المتزامنة القصوى
# Maximum concurrent operations
MAX_CONCURRENT_OPERATIONS=10

# مهلة انتظار العمليات (بالثواني)
# Operation timeout (in seconds)
OPERATION_TIMEOUT=30

# حجم ذاكرة التخزين المؤقت
# Cache size limit
CACHE_SIZE_LIMIT=1000

# مدة انتهاء صلاحية التخزين المؤقت (بالثواني)
# Cache expiration time (in seconds)
CACHE_EXPIRATION=3600

# =============================================================================
# إعدادات التوجيه - Forwarding Settings
# =============================================================================

# التأخير الافتراضي بين الرسائل (بالثواني)
# Default delay between messages (in seconds)
DEFAULT_FORWARD_DELAY=1

# الحد الأقصى لعدد الرسائل في الدقيقة
# Maximum messages per minute
MAX_MESSAGES_PER_MINUTE=20

# تفعيل حفظ الرسائل المحذوفة
# Enable saving deleted messages
SAVE_DELETED_MESSAGES=true

# تفعيل تتبع تعديل الرسائل
# Enable tracking message edits
TRACK_MESSAGE_EDITS=true

# =============================================================================
# إعدادات Userbot (اختياري) - Userbot Settings (optional)
# =============================================================================

# تفعيل دعم Userbot
# Enable Userbot support
ENABLE_USERBOT=false

# API ID من my.telegram.org
# API ID from my.telegram.org
TELEGRAM_API_ID=

# API Hash من my.telegram.org
# API Hash from my.telegram.org
TELEGRAM_API_HASH=

# رقم الهاتف للـ Userbot
# Phone number for Userbot
USERBOT_PHONE=

# =============================================================================
# إعدادات الإشعارات - Notification Settings
# =============================================================================

# تفعيل إشعارات الأخطاء
# Enable error notifications
ENABLE_ERROR_NOTIFICATIONS=true

# معرف قناة الإشعارات
# Notification channel ID
NOTIFICATION_CHANNEL_ID=

# تفعيل إشعارات الإحصائيات اليومية
# Enable daily statistics notifications
ENABLE_DAILY_STATS=false

# وقت إرسال الإحصائيات اليومية (HH:MM)
# Daily statistics send time (HH:MM)
DAILY_STATS_TIME=09:00

# =============================================================================
# إعدادات النسخ الاحتياطي - Backup Settings
# =============================================================================

# تفعيل النسخ الاحتياطي التلقائي
# Enable automatic backup
ENABLE_AUTO_BACKUP=true

# مجلد النسخ الاحتياطية
# Backup directory
BACKUP_DIR=backups

# تكرار النسخ الاحتياطي (بالساعات)
# Backup frequency (in hours)
BACKUP_FREQUENCY=24

# الاحتفاظ بعدد النسخ الاحتياطية
# Number of backups to keep
BACKUP_KEEP_COUNT=7

# =============================================================================
# إعدادات التطوير - Development Settings
# =============================================================================

# وضع التطوير (تفعيل المزيد من السجلات والتصحيح)
# Development mode (enable more logging and debugging)
DEBUG_MODE=false

# تفعيل إعادة التحميل التلقائي
# Enable auto-reload
AUTO_RELOAD=false

# عرض تفاصيل الأخطاء
# Show detailed error messages
SHOW_ERROR_DETAILS=false

# =============================================================================
# إعدادات خارجية - External Services Settings
# =============================================================================

# مفتاح API لخدمة كشف الروابط الضارة
# API key for malicious link detection service
VIRUS_TOTAL_API_KEY=

# مفتاح API لخدمة الترجمة
# API key for translation service
GOOGLE_TRANSLATE_API_KEY=

# مفتاح API لخدمة تحليل المشاعر
# API key for sentiment analysis service
SENTIMENT_API_KEY=

# =============================================================================
# إعدادات الحدود - Rate Limiting Settings
# =============================================================================

# الحد الأقصى للطلبات في الدقيقة لكل مستخدم
# Maximum requests per minute per user
USER_RATE_LIMIT=30

# الحد الأقصى للرسائل المرسلة في الساعة
# Maximum messages sent per hour
MESSAGE_RATE_LIMIT=1000

# مدة حظر المستخدم عند تجاوز الحد (بالدقائق)
# User ban duration when exceeding limit (in minutes)
RATE_LIMIT_BAN_DURATION=60

# =============================================================================
# إعدادات التخزين - Storage Settings
# =============================================================================

# مجلد تخزين الملفات المؤقتة
# Temporary files storage directory
TEMP_DIR=temp

# مجلد تخزين الوسائط
# Media storage directory
MEDIA_DIR=media

# الحد الأقصى لحجم الملف المحمل (بالميجابايت)
# Maximum upload file size (in MB)
MAX_FILE_SIZE=50

# تنظيف الملفات المؤقتة تلقائياً (بالساعات)
# Auto cleanup temporary files (in hours)
TEMP_CLEANUP_INTERVAL=24
